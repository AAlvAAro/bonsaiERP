%tr.account_ledger{ :id => account_ledger.id, :class => "#{account_ledger.active.to_s}"}
  %td
    =link_to account_ledger, account_ledger_path(account_ledger), :class => 'b'
    %span.i= lo(account_ledger.created_at)
  %td.account
    %strong= "#{account_ledger.currency_symbol} #{ntc account_ledger.amount}" unless transaction.currency_id === account_ledger.currency_id
    = account_ledger.description
  %td.cur.amount{'data-account_ledger' => account_ledger.amount_currency} #{ntc account_ledger.amount_currency.abs}
  %td.cur.interests_penalties{'data-vaccount_ledger' => account_ledger.interests_penalties} #{ntc account_ledger.interests_penalties}
  %td.cur.totaccount_ledger_amount{'data-vaccount_ledger' => account_ledger.amount_interests_currency}= ntc account_ledger.amount_interests_currency.abs
  %td.actions= link_to "Verificar", account_ledger_path(account_ledger, :ac_id => account_ledger.payment_link_id),
    :title => 'Verificar con cuenta', :class => 'conciliate sync fl',
    :style => 'margin-right: 10px' unless account_ledger.conciliation?
