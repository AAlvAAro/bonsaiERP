<h1><%= link_to @organisation.name, select_organisation_path(@organisation) %></h1>
<% show_for @organisation do |org| %>
  <div class="half fl">
    <%= org.attribute :name %>
    <%= org.attribute :country %>
    <%= org.attribute :currency %>
    <%= org.attribute :address %>
    <%= org.attribute :address_alt %>
  </div>
  <div class="half fl">
    <%= org.attribute :phone %>
    <%= org.attribute :phone_alt %>
    <%= org.attribute :mobile %>
    <%= org.attribute :email %>
    <%= org.attribute :website %>
  </div>
<% end %>


<div class="half fl">
  <h2>Usuarios</h2>
  <table class="decorated">
    <tr>
      <th>Nombre</th>
      <th>Rol</th>
    </tr>
    <% @organisation.links.each do |l| %>
    <tr>
      <td><%= l.user %></td>
      <td><%# l.role %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="half fl">
  <h2>Impuestos</h2>
  <table class="decorated">
    <tr>
      <th>nombre</th>
      <th>Abreviaci√≥n</th>
      <th>Porcentaje</th>
    </tr>
    <% @organisation.taxes.each do |tax| %>
    <tr>
      <td><%= tax.name %></td>
      <td><%= tax.abbreviation %></td>
      <td><%= tax.rate.round(2) %>%</td>
    </tr>
    <% end %>
  </table>
</div>

