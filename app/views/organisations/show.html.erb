<h1><%= @organisation.name %></h1>
<% show_for @organisation do |org| %>
  <div class="half fl">
    <%= org.attribute :name %>
    <%= org.attribute :country %>
    <%= org.attribute :currency %>
    <%= org.attribute :address %>
    <%= org.attribute :address_alt %>
  </div>
  <div class="half fl">
    <%= org.attribute :phone %>
    <%= org.attribute :phone_alt %>
    <%= org.attribute :mobile %>
    <%= org.attribute :email %>
    <%= org.attribute :website %>
  </div>
<% end %>



<h2><%= t("user.class_name_plural") %></h2>
<table>
  <tr>
    <th><%= t("user.attributes.name") %></th>
    <th><%= t("link.attributes.role") %></th>
  </tr>
  <% @organisation.links.each do |l| %>
  <tr>
    <td><%= l.user %></td>
    <td><%= l.role %></td>
  </tr>
  <% end %>
</table>

<h2><%= t("tax.class_name_plural") %></h2>
<table>
  <tr>
    <th><%= t("tax.attributes.name") %></th>
    <th><%= t("tax.attributes.abbreviation") %></th>
    <th><%= t("tax.attributes.rate") %> %</th>
  </tr>
  <% @organisation.taxes.each do |tax| %>
  <tr>
    <td><%= tax.name %></td>
    <td><%= tax.abbreviation %></td>
    <td><%= tax.rate.round(2) %>%</td>
  </tr>
  <% end %>
</table>

<%= link_to t("edit"), edit_organisation_path(@organisation) %> |
<%= link_to t("list"), organisations_path %>
