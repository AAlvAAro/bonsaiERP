= simple_form_for(@organisation) do |f|
  = bonsai_form_error(f)

  .row-fluid
    .span4=f.input :name, :label => 'Nombre de su empresa'
    .span4=f.input :currency, label: 'Moneda base', collection: currency_options_filtered, hint: 'Todas las transacciones se realizaran en esta moneda.'
    .span4=f.association :org_country, :label => 'País'
  
  .row-fluid
    .span4=f.input :time_zone, as: :time_zone, label: 'Zona horaria'
    .span4=f.input :phone, :label => 'Teléfono', :input_html => {:size => 15}
    .span4=f.input :mobile, :label => 'Móvil', :input_html => {:size => 15}

  .row-fluid
    .span4=f.input :email
    .span4=f.input :address, :label => 'Dirección', :as => :text, :input_html => {:rows => 5} 

  .clear.form_actions
    = f.submit "Crear empresa", :class => 'btn btn-success b'

