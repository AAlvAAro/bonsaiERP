.row-fluid
  .span6
    %h1 Prestamos
  .span6.r
    .btn-group
      = link_to new_receive_loans_path, class: 'btn' do
        Recibir prestamo

      = link_to new_give_loans_path, class: 'btn' do
        Dar prestamo

%ul.listing.unstyled
  - @loans.each do |loan|
    %li.row-fluid
      .span6
        %strong= loan.loan_type
        %h4.ib
          = link_to loan, loan_path(loan.id)

        = link_to loan.contact, loan.contact, title: 'Contacto'
        .clearfix
        %strong(title='Estado')= loan.state_tag
        = loan.due_date_tag
      .span6
        .moneybox
          %label TOTAL
          %h4
            = ntc loan.total
            = currency_label loan.currency
        .moneybox
          %label SALDO
          %h4
            = ntc loan.amount
            = currency_label loan.currency
        .moneybox
          %label INTERESES
          %h4
            = ntc loan.interests
            = currency_label loan.currency
