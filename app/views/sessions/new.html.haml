%h1.c.login
  Iniciar sesión

.initial.c
  = simple_form_for @session do |f|
    = hidden_field :demo_login, params[:demo_login]
    = f.input :email, label: false, wrapper_class: 'large' do
      %i.muted.icon-envelope.icon(title='Email')
      = f.text_field :email, placeholder: 'Email', class: 'email'
    = f.input :password, label: false, wrapper_class: 'large' do
      %i.muted.icon-key.icon
      = f.password_field :password, placeholder: 'Contraseña'

    = f.submit "Entrar", class: 'btn btn-success b'

    .link.fs110
      = link_to new_reset_password_path, class: 'white' do
        %i.icon-lock-open
        Olvido su contraseña?

= render file: 'layouts/browser'

:javascript
  $(function() {
    $('input.email').focus();

    $('#reset-password-link').click(function() {
      $('#login').hide(300);
      $('#password').show(300);
    });

    $('#login-link').click(function() {
      $('#password').hide(300);
      $('#login').show(300);
    });

    var demos = ['demo@demo.com', 'demo1@demo.com', 'demo3@demo.com'];

    if(#{params[:demo_login] == 'true'}) {
      var login = demos[Math.round(Math.random() * 2)];
      $('#session_email').val(login);
      $('#session_password').val('demo1234');
      $('.btn-success').popoverNotitle({content: 'Haga click para ingresar al demo'})
      $('.btn-success').popover('show');
    }
  });
