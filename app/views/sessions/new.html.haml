:css
  .pad-reg{
    padding: 20px;
  }
  #links{ display: none; }
  input{
    font-size: 1.5em;
    padding: 2px 6px;
  }
  label{
    font-size: 1.2em; 
    display: block; 
    font-weight: bold; 
    color: #383838;
  }
  .input{
    width: 100%;
  }

.pad-reg
  %h1 Iniciar sesión

  = simple_form_for(@user, :url => sessions_path, :method => :post) do |f|
    = bonsai_form_error(f)
    = f.input :email, :label => "Email", :input_html => {:size => 40}
    .clear
    = f.input :password, :label => 'Contraseña', :input_html => {:size => 40}
    .clear
    = link_to "Olvido su contraseña?", "#", :class => 'fs120'
    .clear
    = f.submit "Ingresar"

