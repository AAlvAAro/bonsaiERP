= simple_form_for(income_service, url: get_income_url(income_service), html: {class: 'enter ui-form'}) do |f|
  = bonsai_form_error(f)

  -########################################
  -# Render common form elements
  = render 'transactions/shared_form', f: f

  -########################################
  -# Render items
  .row-fluid
    =render "transactions/form_items", f: f, transaction: income_service, details: :income_details

  = f.submit 'Salvar', class: 'btn btn-success b btn-large trans', name: 'commit_save', data: {show: 'trans.direct_payment| inverse'}
  = f.submit value: 'Salvar y aprovar', class: 'btn btn-success b btn-large', name: 'commit_approve' if income_service.is_draft?


:javascript
  (function($) {
    $('body').on('new-contact', '.contact-form', function(event, resp) {
      $('.contact_id').val(resp.matchcode).data('value', resp.matchcode)
      .prev().val(resp.matchcode);
    })

    $('#transaction_currency').select2();

    fx.rates = exchangeRates.rates;
    income = new App.Income(#{AccountQuery.new.bank_cash_options.to_json});
  })(jQuery)
