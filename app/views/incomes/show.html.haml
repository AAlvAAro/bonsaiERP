- content_for :links do
  %ul.breadcrumps.span6
    %li #{link_to "Ingresos", incomes_path}
    %li
      %span #{@income}

  .links.span6
    = link_to 'Nueva', new_income_path
    = link_to 'Editar', edit_income_path(@income)
    = link_to 'Borrar', @income, method: 'delete'

.row
  .span2.well
    %h3 Total
    %h4
      = @income.currency_code
      = ntc @income.total

  .span2.well
    %h3 Saldo
    %h4
      = @income.currency_code
      = ntc @income.balance

#tabs
  %ul
    %li
      %a(href="#information" id="tab_info") InformaciÃ³n
    %li
      %a(href="#payments") Cobros
    %li
      %a(href="#inventory") Entregas inventario

  #information
    = render "incomes/items", income: @income
  #payments
    %h2 Cobros
    
    = render "payments/form", payment: PaymentIncome.new(date: Date.today, transaction_id: @income.id)

    = render "payments/payments", transaction: @income

:coffeescript
  $( ->
    $('#tabs').tabs()
  )
