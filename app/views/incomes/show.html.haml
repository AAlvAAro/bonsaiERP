- content_for :links do
  %ul.breadcrumps.span6
    %li #{link_to "Ingresos", incomes_path}
    %li
      %span #{@income}

  .links.span6
    = link_to 'Nuevo', new_income_path
    = link_to 'Editar', edit_income_path(@income)
    = link_to 'Borrar', @income, method: 'delete'

.row
  .span2.well.well-small
    %h3 Total
    %h4
      = ntc @income.total
      = @income.currency

  .span2.well.well-small
    %h3 Saldo
    %h4
      = ntc @income.balance
      = @income.currency

#tabs
  %ul
    %li
      %a(href="#information" id="tab_info") InformaciÃ³n
    %li
      %a(href="#payments") Cobros
    %li
      %a(href="#inventory") Entregas inventario

  #information
    = render "incomes/items", income: @income
  #payments
    %h2 Cobros

    = render "income/payment_form", income: @income

:coffeescript
  $( ->
    $('#tabs').tabs()
  )
