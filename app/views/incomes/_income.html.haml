- income = present income
%li.row-fluid
  .span4
    %h4.ib
      = link_to income, income
    = income.has_error_label
    = link_to income.contact, income.contact
    .clear-both
    = income.state_tag
    %i= l income.date
  .span4
    = income.creator_label
    = income.approver_label
    = income.nuller_label

    = income.due_date_tag

    .clear-both
    - if income.description.present?
      .clear-both
      %i.icon-file-alt(data-toggle='tooltip' title='Descripci√≥n')
      = income.description
  .span3
    .span6.r
      = ntc income.total
      = currency_label income.currency

    .span6.r
      = income.balance
      = currency_label income.currency
  .span1.r
    = link_to icon_edit, edit_income_path(income.id), class: 'dark' unless income.is_nulled?
