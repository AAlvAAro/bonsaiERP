- income = present income
%li.row-fluid(id="#{income.id}")
  .span4
    .row-fluid
      .span1
        %input.row-check(type='checkbox' id="#{income.id}")
      .span11
        %h4.ib
          = link_to income, income
        = income.has_error_label
        = link_to income.contact, income.contact
        .clear-both
        = income.state_tag
        %i= l income.date
        = income.inventory_tag

  .span4
    = income.updater_label
    = income.creator_label
    = income.approver_label
    = income.nuller_label

    = income.due_date_tag

    .clear-both
    = income.description_tag
    .clear-both
    %ul.btags(data-tag_ids="#{income.tag_ids}")

  .span3
    .span6.r
      = ntc income.total
      = currency_label income.currency

    .span6.r
      = income.balance
      = currency_label income.currency
  .span1.r
    = link_to icon_edit, edit_income_path(income.id), class: 'dark' unless income.is_nulled?
