- content_for :links do
  .links= link_to "Nueva venta", new_income_path, :class => 'new'

%h1 Ventas

- @in = Income.org

%ul.tabs
  %li= link_incomes "Todas", 'all'
  %li= link_incomes "Esperando aprobación #{size_or_blank(@in.draft.size)}", 'draft'
  %li= link_incomes "Esperando cobro #{size_or_blank(@in.approved.size)}", 'awaiting_payment'
  %li= link_incomes "Vencidas #{size_or_blank(@in.due.size)}", 'due'
  %li= link_incomes "Cobradas", 'paid'

= link_to "Buscar", "#search", :class => 'search'

= paginate @incomes

%table{ :class => 'decorated nwl' }
  %thead
    %tr
      %th{ :title => 'Número de referencia' } Num. Ref.
      %th Cliente
      %th Fecha
      %th Total<br/>#{currency_plural}
      %th Saldo<br/>#{currency_plural}
      %th{:title => 'Moneda'} Mon.
      %th Estado
      %th Contado<br/>Crédito
      %th Vence el
      %th

  %tbody
    - for income in @incomes
      %tr{ :class => cycle(:odd, :even) }
        %td= link_to income.ref_number, income, :class => 'b'
        %td= income.contact
        %td.nw= lo income.date
        %td.cur= ntc exchange(income, :real_total, @currency_rates)
        %td.cur= ntc exchange(income, :balance, @currency_rates)
        %td <span>#{income.currency_symbol}</span>
        %td <span class="#{income.real_state}">#{income.show_state}</span>
        %td= cash_credit(income.cash)
        %td= lo income.payment_date unless income.paid?
        %td.actions
          = bonsai_links(income) if income.draft?
