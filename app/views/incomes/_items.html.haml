%table#items_table.table.decorated
  %thead
    %tr
      %th.c Item
      %th.c
        Precio unitario
        = currency_label income.currency
      %th.c Cantidad
      %th.c
        %span(title="Saldo inventario" data-toggle='tooltip') Saldo Inv.
      %th.r
        Total fila
        = currency_label income.currency

    - income.income_details.each do |det|
      %tr
        %td.span6= det.item
        %td.span2.cur= ntc det.price
        %td.span2.cur= det.quantity
        %td.span2.cur.error.b= det.balance
        %td.span2.total_row.cur= ntc det.total

  %tr.extra.pad_top
    %td(colspan="3")
    %td.r Subtotal
    %td#subtotal.r= ntc income.subtotal

  %tr.extra
    %td(colspan="3")
    %td.r.b.dark Total
    %td#total_value.r.b{'data-val' => income.total}
      = ntc income.total
      = currency_label income.currency
