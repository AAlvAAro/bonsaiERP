- content_for :links do
  %ul.breadcrumbs.span6
    %li #{link_to "Contactos", contacts_path}
    %li
      %i.icon-caret-right
    %li
      = @contact

.row-fluid
  .span8
    %h1.n
      = @contact
      %br
      %small
        = @contact.complete_name
  .span4.r
    = link_to icon_new_text, new_contact_path, class: 'btn'
    = link_to icon_edit_text, edit_contact_path(@contact.id), class: 'btn'
    = link_to icon_delete_text, @contact, class: 'btn', confirm: "Esta seguro de borra el contacto", method: :delete

.row-fluid
  .span4
    = render_if @contact.email do
      %i.icon-envelope(title='E-mail' data-toggle='tooltip')
      = @contact.email

  .span4
    .span8
      = render_if @contact.tax_number do
        %i.icon-barcode(title='Código tributario' data-toggle='tooltip')
        = @contact.tax_number
      .clear-both
      = render_if @contact.address do
        %i.icon-building(title='Dirección' data-toggle='tooltip')
        =nl2br @contact.address
    .span4
      = render_if @contact.phone do
        %i.icon-phone(title='Teléfono' data-toggle='tooltip')
        = @contact.phone
      .clear-both
        = render_if @contact.mobile do
          %i.icon-mobile-phone(title='Móvil' data-toggle='tooltip')
          = @contact.mobile

  .span3
    .span6.r
      -#%i.icon-plus.green(title="Debe #{currency}" data-toggle='tooltip')
      -#= ntc(100000)
      -#%small.muted(style='border-bottom: 1px dotted gray') EX
    .span6.r
      -#%i.icon-minus.red(title="Debemos #{currency}" data-toggle='tooltip')
.row-fluid
  .span6
    .span6.well.well-small
      %label.text-success Total Ingresos
      = ntc @contact.total_incomes
      = currency_label
    .span6.well.well-small
      %label.text-error Total Egresos
      = ntc @contact.total_expenses
      = currency_label
      -#= ntc 500

.row-fluid
  %ul#contact-tabs.nav.nav-tabs
    %li
      %a.b(href='#incomes' data-toggle='tab') Ingresos
    %li
      %a.b(href='#expenses' data-toggle='tab') Egresos

  .tab-content
    #incomes.tab-pane
      %h2 Ingresos

      %ul.unstyled.listing
        %li.row-fluid
          .span4.offset7
            .span6.r.b.muted
              Total
            .span6.r.b.muted
              Saldo


        = render partial: 'incomes/income', collection: @contact.incomes.page(1).includes(:contact, transaction: [:creator, :approver, :nuller]), as: :income


      = link_to 'Ver mas', contact_path(@contact.id, income: true, format: 'js'), remote:true

    #expenses.tab-pane
      %h2 Egresos

      %ul.unstyled.listing
        %li.row-fluid
          .span4.offset7
            .span6.r.b.muted
              Total
            .span6.r.b.muted
              Saldo

        = render partial: 'expenses/expense', collection: @contact.expenses.page(1).includes(:contact, transaction: [:creator, :approver, :nuller]), as: :expense

:javascript
  $(function() {
    $('#contact-tabs a:first').tab('show')
    if($('#incomes li').length == 25) {
      $('#incomes').append('<a></a>')
    }

  })
