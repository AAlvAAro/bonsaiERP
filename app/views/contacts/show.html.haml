- content_for :links do
  %ul.breadcrumbs.span6
    %li #{link_to "Contactos", contacts_path}
    %li
      %i.icon-caret-right
    %li
      = @contact

.row-fluid
  .span6
    %h1= @contact

  .span6.r
    = link_to icon_new_text, new_contact_path, class: 'btn'
    = link_to icon_edit_text, edit_contact_path(@contact), class: 'btn'
    = link_to icon_delete_text, @contact, method: 'delete', class: 'btn', confirm: 'Esta seguro de eliminar al contacto?'

.row-fluid
  .span6
    %label Identificado
    = @contact.matchcode
  .span3
    %label Nombres
    = @contact.first_name
  .span3
    %label Apellidos
    = @contact.last_name

.row-fluid
  .span2
    %label Teléfono
    = @contact.last_name
  .span2
    %label Móbil
    = @contact.mobile
  .span2
    %label NIT
    = @contact.tax_number
  .span4
    %label Email
    = @contact.email

.row-fluid
  .span6
    %label Dirección
    = @contact.address
  .span6
    %label Información adicional
    = @contact.aditional_info
