%h1 Ver contacto
%p
  = link_to 'Editar', edit_contact_path(@contact), :class => 'edit' 
  = link_to 'Lista', contacts_path, :class => 'list' 

.input
  %label Nombre
  = @contact.name
.input
  %label Código de indentificación
  = @contact.matchcode
.clear
.input
  %label Empresa
  = @contact.organisation_name
.input._25
  %label Teléfono
  = @contact.phone
.input._25
  %label Móvil
  = @contact.mobile
.clear
.input
  %label Email
  = @contact.email
.input
  %label NIT
  = @contact.tax_number
.clear
.input
  %label Dirección
  = nl2br(@contact.address)
.input
  %label Dirección alternativa
  = nl2br(@contact.address_alt)
.clear
.input
  %label Información adicional
  = nl2br(@contact.aditional_info)

