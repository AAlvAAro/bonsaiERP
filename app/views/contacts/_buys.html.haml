%ul.tabs
  %li= link_option "Todas", 'all'
  %li= link_option "Proformas #{size_or_blank(buys_count.draft.size)}", 'draft'
  %li= link_option "Esperando cobro #{size_or_blank(buys_count.approved.size)}", 'approved'
  %li= link_option "Vencidas #{size_or_blank(buys_count.due.size)}", 'due'
  %li= link_option "Con entrega pendiente #{size_or_blank(buys_count.inventory.size)}", 'inventory'
  %li= link_option "Cobradas", 'paid'

#search_income.search{:style => show_if_search}
  %a.close{:href => "#"} cerrar
  %h3 Buscar ventas
  =form_tag "/buys", :method => 'get' do
    =hidden_field_tag "search_div_id", "search_buys"
    .input
      %label Cliente o Nº de referencia
      =text_field_tag 'search', params[:search], :size => 40
    .input
      %label Estado
      =select_tag "option", options_for_select(list_income_states, params[:option])
    %div
    =submit_tag 'Buscar', :class => 'btn btn-success'

= link_to "Buscar", "#search_income", :class => 'search'

= paginate buys

%table.table.table-striped
  %thead
    %tr
      %th.tip{:title => 'Estado'} Est.
      %th.tip{ :title => 'Número de referencia' } Nº Ref.
      %th Vence el
      %th Total
      %th Saldo
      %th.tip{:title => "Contado Crédito"} Tipo
      %th Fecha
      %th

  %tbody
    -  buys.each do |buy|
      %tr
        %td 
          %span.bicon.pill{:class => "#{buy.real_state}", :title => buy.show_state}
        %td= link_to buy.ref_number, buy, :class => 'b'
        %td= lo buy.payment_date unless buy.paid?
        %td.cur #{buy.currency_symbol} #{ntc buy.total }
        %td.cur #{buy.currency_symbol} #{ntc buy.balance }
        %td= cash_credit(buy.cash)
        %td.nw= lo buy.date
        %td.actions
          = bonsai_links(buy) if buy.draft?


