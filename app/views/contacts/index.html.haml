- content_for :links do
  %ul.breadcrumbs.span6
    %li
      =link_to 'Contactos', contacts_path


.row-fluid
  .span6
    %h1 Contactos
  .span6.r
    = link_to icon_new_text, new_contact_path, class: 'btn'

.row-fluid
  .span6
    = render 'contacts/search'

= paginate(@contacts)

-#%ul.tabs
  %li= link_tab "Todos", contacts_path, "all"
  %li= link_tab "Clientes", "/contacts", "clients"
  %li= link_tab "Proveedores", "/contacts", "suppliers"


%ul.unstyled.listing
  - @contacts.each do|contact|
    %li.row-fluid
      .span4
        %h4
          = link_to contact, contact
        .clear-both
        %h4 
          %small= contact.complete_name
        .clear-both
        = render_if contact.email do
          %i.icon-envelope(title='E-mail' rel='tooltip')
          = contact.email

      .span4
        .span8
          = render_if contact.address do
            %i.icon-building(title='Dirección' rel='tooltip')
            =nl2br contact.address
        .span4
          = render_if contact.phone do
            %i.icon-phone(title='Teléfono' rel='tooltip')
            = contact.phone
          .clear-both
            = render_if contact.mobile do
              %i.icon-mobile-phone(title='Móvil' rel='tooltip')
              = contact.mobile

      .span3
        .span6.r
          -#%i.icon-plus.green(title="Debe #{currency}" rel='tooltip')
          -#= ntc(100000)
          -#%small.muted(style='border-bottom: 1px dotted gray') EX
        .span6.r
          -#%i.icon-minus.red(title="Debemos #{currency}" rel='tooltip')
          -#= ntc 500

      .span1
        =link_to icon_edit, edit_contact_path(contact), class: 'dark'
