%li.row-fluid
  .span6
    %strong.muted Prestamo
    %h4.ib
      = link_to loan, loan_path(loan.id)

    = loan.loan_type_tag
    .clearfix
    %strong(title='Estado')= loan.state_tag
    = loan.due_date_tag
  .span6
    .row-fluid
      .span4
        %span.muted TOTAL
        = ntc loan.total
        = currency_label loan.currency
      .span4
        %span.muted SALDO
        = ntc loan.amount
        = currency_label loan.currency
      .span4
        %span.muted INTERESES
        = ntc loan.interests
        = currency_label loan.currency

