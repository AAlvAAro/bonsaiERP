- contact = present contact
%li.row-fluid.contact(data-data="#{contact.incomes_expenses_status.to_json}")
  .span3
    %h4
      = link_to contact, contact
    .clear-both
    %h4 
      %small= contact.complete_name
    .clearfix
    = contact.email_tag

  .span4
    .span8
      = contact.tax_number_tag

      .clearfix
      = contact.address_tag
    .span4
      = contact.phone_tag
      .clearfix
      = contact.mobile_tag

  .span4
    .row-fluid
      .span6.incomes
      .span6.expenses

  .span1
    =link_to icon_edit, edit_contact_path(contact), class: 'dark'
