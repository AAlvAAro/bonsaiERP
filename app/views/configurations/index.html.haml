%h1 Configuración

#tabs
  %ul
    %li <a href="#users">Usuarios</a>
    %li <a href="#organisation">Empresa</a>


  #users
    %p
      =link_to new_admin_user_path, class: 'btn' do
        %i.icon-plus-sign
        Adicionar usuario
  
    %h3 Usuarios

    %table.table.table-striped
      %tr
        %th Nombre Completo
        %th Email
        %th Rol
        %th Activo
        %th
      - current_organisation.users.each do |user|
        %tr
          %td
            -#= link_to user, user
            = user
          %td
            = user.email
          %td
            = User.roles_hash[user.rol]
          %td
            %i.b(class="icon-#{user.active}")
          %td
            -#= link_to icon_edit, edit_admin_user_path(user), title: 'Editar usuario', rel: 'tooltip', class: 'dark'

  #organisation
    %p
      = link_to edit_organisation_update_path(current_organisation.id), class: 'btn' do
        %i.icon-pencil
        Editar datos empresa


    %h3 
      %span.muted.n Datos
      = current_organisation

    .row-fluid
      .span3
        %i.icon-phone(title='Teléfono' rel='tooltip')
        = current_organisation.phone
      .span3
        %i.icon-mobile-phone(title='Movil' rel='tooltip')
        = current_organisation.mobile
      .span3
        %i.icon-envelope(title='Email' rel='tooltip')
        = current_organisation.email
      .span3
        %i.icon-cloud(title='Website' rel='tooltip')
        = render_if current_organisation do
          =link_to current_organisation.website, current_organisation.website, target: '_blank'
    .row-fluid
      .span6
        %i.icon-building(title='Dirección' rel='tooltip')
        = nl2br current_organisation.address

:javascript
  $(function() { 
    $('#tabs').tabs(); 
  });
