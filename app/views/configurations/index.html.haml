%h1 Configuración

%ul#tabs.nav.nav-pills.fs150
  %li
    %a(href="#users" data-toggle="tab")Usuarios
  %li
    %a(href="#organisation" data-toggle="tab") Empresa

.tab-content
  #users.tab-pane.fade
    %p
      =link_to new_admin_user_path, class: 'btn' do
        %i.icon-plus-sign
        Adicionar usuario
  
    %h3 Usuarios

    %table.table.table-striped
      %tr
        %th Nombre Completo
        %th Email
        %th Rol
        %th Activo
        %th
      - current_organisation.users.each do |user|
        %tr
          %td
            -#= link_to user, user
            = user
          %td
            = user.email
          %td
            = User.roles_hash[user.rol]
          %td
            %i.b(class="icon-#{user.active}")
          %td
            -#= link_to icon_edit, edit_admin_user_path(user), title: 'Editar usuario', 'data-toggle' => 'tooltip', class: 'dark'

  #organisation.tab-pane
    %p
      = link_to edit_organisation_update_path(current_organisation.id), class: 'btn' do
        %i.icon-pencil
        Editar datos empresa


    %h3 
      %span.muted.n Datos
      = current_organisation

    .row-fluid
      .span3
        %i.icon-phone(title='Teléfono' data-toggle='tooltip')
        = current_organisation.phone
      .span3
        %i.icon-mobile-phone(title='Movil' data-toggle='tooltip')
        = current_organisation.mobile
      .span3
        %i.icon-envelope(title='Email' data-toggle='tooltip')
        = current_organisation.email
      .span3
        %i.icon-cloud(title='Website' data-toggle='tooltip')
        = render_if current_organisation do
          =link_to current_organisation.website, current_organisation.website, target: '_blank'
    .row-fluid
      .span6
        %i.icon-building(title='Dirección' data-toggle='tooltip')
        = nl2br current_organisation.address

:javascript
  $(function() { 
    $('#tabs a:first').tab('show'); 
  });
