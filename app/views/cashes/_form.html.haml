= simple_form_for(@cash, html: {id: 'cash-form'}) do |f|
  = bonsai_form_error(f)
  .row-fluid
    .span6
      = f.input :name, :label => 'Nombre de caja'

    .span6
      -if @cash.new_record?
        = f.input :currency, :label => 'Moneda', collection: currency_options,
          :hint => "<span class='warning bicon'></span> <span class='dark-yellow'>No es posible modificar después</span>".html_safe
      - else
        %label Moneda
        = currency_label @cash.currency
  .row-fluid
    .span6
      - if  @cash.new_record?
        = f.input :amount, :label => 'Total en cuenta', :input_html => {:size => 12, :class => 'r'},
        :hint => "<span class='warning bicon'></span> <span class='dark-yellow'>No es posible modificar después</span>".html_safe
      -else
        %label Total en cuenta
        = ntc @cash.amount
        = currency_label @cash.currency 

    .span6
      = f.input :address, :label => 'Dirección', :as => :text, :input_html => {:rows => 4, :cols => 35}

  .clear
  = f.submit 'Salvar', :class => 'btn btn-success b'
