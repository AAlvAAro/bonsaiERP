= simple_form_for(@cash) do |f|
  = bonsai_form_error(f)
  .main.bg-light-grey
    ._40.fl
      = f.input :name, :label => 'Nombre de caja'
    -if @cash.new_record?
      ._60.fl
        = f.association :currency, :label => 'Moneda',
        :hint => "<span class='warning bicon'></span> <span class='red'>No es posible modificar despues</span>".html_safe
        = f.input :amount, :label => 'Total en cuenta', :input_html => {:size => 12, :class => 'r'},
        :hint => "<span class='warning bicon'></span> <span class='red'>No es posible modificar despues</span>".html_safe
    -else
      .input._25
        %label Moneda
        =@cash.account.currency
      .input._25
        %label Total en cuenta
        #{@cash.account.currency_symbol} #{ntc @cash.account.amount}

    .clear  
  .clear
