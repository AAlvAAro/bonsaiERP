- content_for :links do
  %ul.breadcrumbs
    %li
      Cuentas efectivo


.row-fluid
  .span6
    %h1 Cuentas efectivo
  .span6.r
    = link_to new_cash_path, class: 'btn' do
      %i.icon-plus-sign
      Nueva cuenta efectivo


%ul#cashes.accounts_list
  - @cashes.each do |cash|
    %li.row-fluid
      .span7
        %h3
          = link_to cash, cash
          = currency_label cash.currency
      .span3.pull-right
        .moneybox
          %label TOTAL EN CUENTA
          %h3
            = ntc cash.amount
            = currency_label cash.currency
        -#= pendent_money_link(cash, :class => 'b fs110')
