- content_for :links do
  .span6 &nbsp;
  .links.span6= link_to "Nueva caja", new_cash_path, :class => 'new'

%header
  %h1 Cuentas caja

- if @cashes.empty?
  %h3= link_to "Crear nueva caja", new_cash_path, :class => 'add'

%ul#cashes.accounts_list
  - @cashes.each do |cash|
    %li.row-fluid
      .span7
        %h3
          = link_to cash, cash
          = currency_label cash.currency
      .span3.pull-right
        .well.well-small
          %label TOTAL EN CUENTA
          %h3
            = ntc cash.amount
            = currency_label cash.currency
        -#= pendent_money_link(cash, :class => 'b fs110')
      .clear

