- content_for :links do
  %ul.breadcrumbs.span6
    %li
      =link_to "Cuentas caja", cashes_path
    %li
      %i.icon-caret-right
    %li
      Caja
  .links.span6

.row-fluid
  .span6
    %h2.n
      = @cash.name
      = currency_label @cash.currency
  .span6.r
    = link_to new_transference_path(account_id: @cash.id), class: 'btn',
      title: 'Transferir dinero a otra cuenta', 'data-toggle' => 'tooltip' do
      %i.icon-exchange
      Nueva transferencia

    = link_to icon_edit_text, edit_cash_path(@cash), class: 'btn'

.row-fluid
  .span6
    .moneybox
      %label SALDO EN CAJA
      %h5.n
        = ntc @cash.amount
        = currency_label @cash.currency

  .span6
    %label Direcci√≥n
    = nl2br(@cash.address)

%h3 Transacciones

= render "account_ledgers/money", account: @cash
