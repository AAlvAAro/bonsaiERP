- content_for :links do
  %ul.breadcrumps
    %li #{ link_to "Almacenes", stores_path }<span>&gt;</span>

  .links
    = link_to "Nuevo", new_store_path, :class => 'add'
    = link_to "Editar", edit_store_path(@store) , :class => 'edit'
    = link_to "Borrar", @store , :class => 'delete', :confirm => "Esta seguro de borrar el almacen", :method => :delete

%h1= @store


%ul.menu
  %li 
    <a href="#" class="new">Nueva operación <span class="more"></span></a>
    %ul
      %li= link_to "Nuevo ingreso", new_inventory_operation_path(:store_id => @store.id, :operation => 'in')
      %li= link_to "Nuevo egreso", new_inventory_operation_path(:store_id => @store.id, :operation => 'out')
      %li= link_to "Nueva transferencia", ""

.input.fr
  <a href="#store_info" class="more_info">Ver información</a>
  .clear
  #store_info{:style => 'display:none'}
    .input._25
      %label= "Teléfono"
      = @store.phone
    .input._25
      %label= "Activo"
      <span class="#{@store.active.to_s}"></span>
    .input
      %label= "Dirección"
      = nl2br @store.address

.clear

#tabs
  %ul
    %li <a href="#items">Inventario de items</a>
    %li <a href="#stocks">Operaciones realizadas</a>

  #items
    %h2 Inventario de items

    - @items = @store.stocks.includes(:item).page(@page)
    = paginate(@items)

    %table.decorated
      %tr
        %th Item
        %th Cantidad
        %th Costo unitario
        %th Subtotal
        %th{:title => 'Cantidad mínima'} Cat. min.
        %th

      - @items.each do |st|
        %tr
          %td= st.item
          %td.cur= ntc st.quantity
          %td.cur= ntc st.unitary_cost
          %td.cur= ntc( st.quantity * st.unitary_cost )
          %td.cur= ntc st.minimun_quantity
          %td.cur= link_to "mínimo", "#"

  #stocks
    %h2 Operaciones realizadas
    - params[:page2] ||= 1
    - @ops = @store.inventory_operations.page(params[:page2])

    = paginate(@ops)

    %table.decorated
      %tr
        %th Fecha
        %th Operación
        %th Total #{currency_symbol}

      - @ops.each do |op|
        %tr
          %td= lo op.date
          %td= op.operation == 'in' ? 'Ingreso' : 'Egreso'
          %td.cur= ntc op.total



:javascript
  head.ready(function() {
    $('#tabs').tabs({
      show: function() { console.log(arguments)}
    });
  })
