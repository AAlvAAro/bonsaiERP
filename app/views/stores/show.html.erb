<% show_for @store do |o| %>
  <%= o.attribute :name, :label => "Nombre" %>
  <%= o.attribute :address, :label => "Dirección" %>
  <%= o.attribute :phone, :label =>  "Teléfono" %>
  <%= o.attribute :active, :label => "Activo" %>
  <%= o.attribute :description, :label => "Descripción" %>
<% end %>

<%= link_to 'Editar', edit_store_path(@store), :class => 'edit' %> 
<%= link_to 'Lista', stores_path, :class => 'list' %>
