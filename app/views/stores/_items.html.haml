%ul.tabs
  %li= link_option "Todos", "all"
  %li= link_option "Minimos", 'minimum'

-#= paginate(store.stocks)

%table.table.table-striped
  %tr
    %th(width="50%") Item
    %th.c(width="20%") Cantidad
    %th.c(width="20%") Cantidad minima
    %th

  - store.stocks.includes(:item).order('items.name').each do |st|
    %tr{:id => st.id}
      %td= link_to st.item, st.item
      %td.cur= ntc st.quantity
      %td.cur.min= ntc st.minimum
      %td.cur= link_to "mínimo", edit_stock_path(:id => st.item_id, :item_id => st.item_id, :store_id => @store.id), :class => 'ajax', 'data-title' => 'Definir mínimo', 'data-width' => 450

