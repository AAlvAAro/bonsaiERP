- content_for :links do
  %ul.breadcrumbs.span6
    %li
      %span Egresos


.row-fluid
  .span6
    %h1 Egresos
  .span6.r
    .btn-group
      = link_to export_expenses_path, class: 'btn' do
        %i.icon-download-alt
        Exportar

      -#%a#quick-expense-link.btn(href="javascript:;")
        %i.icon-bolt
        Egreso r√°pido

      = link_to new_expense_path, class: 'btn' do
        %i.icon-plus-sign
        Nuevo egreso

= render 'expenses/search'

%ul.unstyled.inline
  %li
    = link_to "Todos", expenses_path, class: params_bold(:all)
  %li
    = link_to "Aprobados", expenses_path(approved: true), class: params_bold(:approved)
  %li
    = link_to "Atrasados", expenses_path(due: true), class: params_bold(:due) 
  %li
    = link_to "Con error", expenses_path(error: true), class: params_bold(:error) 
  %li
    = link_to "Anulados", expenses_path(nulled: true), class: params_bold(:nulled)


- paginate_html = paginate @expenses

=paginate_html

%ul#expenses-list.unstyled.listing
  %li.row-fluid
    .span4.offset7
      .span6.r.b.muted
        Total
      .span6.r.b.muted
        Saldo

  =render @expenses

=paginate_html

= render 'expenses/index_tour'

:javascript
  $(function() {
    $('.listing').rowCheck();
  })
