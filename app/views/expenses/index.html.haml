- content_for :links do
  %ul.breadcrumbs.span6
    %li
      %span Egresos


.row-fluid
  .span6
    %h1 Egresos
  .span6.r
    %a#quick-expense-link.btn(href="javascript:;")
      %i.icon-bolt
      Egreso r√°pido

    = link_to new_expense_path, class: 'btn' do
      %i.icon-plus-sign
      Nuevo egreso

.row-fluid
  = render 'expenses/quick_expense'

= paginate @expenses.page(@page)

%ul.unstyled.listing
  %li.row-fluid
    .span4.offset7
      .span6.r.b.muted
        Total
      .span6.r.b.muted
        Saldo
  - @expenses.each do |expense|
    - expense = present expense
    %li.row-fluid
      .span4
        %h4
          = link_to expense, expense
        = expense.has_error_label
        %h5
          %i.icon-user(title="Contacto" rel='tooltip')
          = expense.contact
        .clear-both
        = expense.state_tag
        %i= l expense.date
      .span3
        = expense.due_date_tag
        .clear-both
        = expense.creator_label
        = expense.approver_label
        = expense.nuller_label
      .span4
        .span6.r
          = ntc expense.total
          = currency_label expense.currency

        .span6.r
          = ntc expense.balance
          = currency_label expense.currency
      .span1
        = link_to icon_edit, edit_expense_path(expense), class: 'dark'
