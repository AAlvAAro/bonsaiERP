.quick-expense-form.hide
  = simple_form_for QuickExpense.new(ref_number: Expense.get_ref_number), url: quick_expense_expenses_path do |f|
    .row-fluid
      .span4= f.input :ref_number, label: "NÃºmero de referencia"
      .span4= f.input :account_id, collection: Account.all, label: 'Cuenta'

    .row-fluid
      .span4
        =f.input :contact_id, as: :autocomplete, label: "Contacto",
          'data-source' => '/contacts/search', input_html: { 'data-new_url' => new_contact_path, 'data-title' => 'Nuevo contacto'}
      .span4=f.input :date, as: :datepicker, label: 'Fecha'

    .row-fluid
      .span4=f.input :amount, label: 'Cantidad'
      .span4=f.input :bill_number, label: 'No. de documento', label_html: {title: 'Factura o Recibo', rel: 'tooltip'}

    = f.submit 'Salvar'
    %a#quick-expense-hide-link.btn Cancelar

:coffeescript
  (($) ->
    $('#quick-expense-link').live 'click', ->
      $('.quick-expense-form').show('medium')
      $(this).hide('medium')

    $('#quick-expense-hide-link').live 'click', ->
      $('.quick-expense-form').hide('medium')
      $('#quick-expense-link').show('medium')
  )(jQuery)

