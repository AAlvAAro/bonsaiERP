%h1= item_title

= link_new_item

%table{ :class=> "decorated mt10" }
  %tr
    %th Nombre
    %th Código
    %th Unidad
    %th Descripción
    %th Stockable
    %th

  - @items.each do |item|
    %tr
      %td= link_to item.name, item
      %td= item.code 
      %td= item.unit.name 
      %td= item.description 
      %td{ :class => item.stockable }
      %td= bonsai_links(item)
