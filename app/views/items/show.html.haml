- content_for :links do
  %ul.breadcrumps
    %li #{link_to "Inicio", "/dashboard"}<span>&gt;</span>
    %li #{ link_to "Items", "/items" }<span>&gt;</span>

  .links
    = link_to "Nuevo", new_item_path, :class => 'add'
    = link_to "Editar", edit_item_path(@item) , :class => 'edit'
    = link_to "Borrar", @item , :class => 'delete', :confirm => "Esta seguro de borra el ítem", :method => :delete
%h1 Ver item

.show
  .input
    %label Código
    = @item.code 
  .input
    %label Nombre
    = @item.name
  .clear
  .input
    %label Costo unitario
    .b= ntc @item.unitary_cost
  .input
    %label Precio de venta
    .b= ntc @item.price
  .clear
  .input._25
    %label Unidad
    = @item.unit
  .input._25
    %label Activo
    %span.icon{:class => @item.active.to_s}
  .input
    %label Tipo
    = @item.get_type
  .clear
  /.input#item_discount
  /%label Descuento
  /%span= @item.discount
  .input
    %label Descripción
    = @item.description
  .clear

