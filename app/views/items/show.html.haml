%p
  = link_to "Editar", edit_item_path(@item) , :class => 'edit'
  = link_to "Lista", items_path(:ctype => @item.ctype), :class => 'list'
%h1 Ver item

.show
  .input
    %label Código
    = @item.code 
  .input
    %label Nombre
    = @item.name
  .clear
  .input
    %label Costo unitario
    .b= ntc @item.unitary_cost
  .input
    %label Precio de venta
    .b= ntc @item.price
  .clear
  .input._25
    %label Unidad
    = @item.unit
  .input._25
    %label Activo
    %span.icon{:class => @item.active.to_s}
  .input
    %label Tipo
    = @item.get_type
  .clear
  /.input#item_discount
  /%label Descuento
  /%span= @item.discount
  .input
    %label Etiquetas
    = @item.tag_list
  .clear
  .input
    %label Descripción
    = @item.description
  .clear

