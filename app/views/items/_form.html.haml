= simple_form_for(@item) do |f|
  = bonsai_form_error(f)
  /= f.input :ctype, :as => :hidden

  = f.input :code, :label => 'Código'
  = f.input :name, :label => 'Nombre'
  .clear
  = f.association :unit, :label => "Unidad", :input_html => { 'data-path' => new_unit_path }
  = f.input :active, :label => "Activo", :as => :radio
  .clear

  = f.input :unitary_cost, :label => 'Costo unitario de compra'
  /- if f.object.product?
  = f.input :price, :label => 'Precio unitario de venta'
  = f.input :discount, :label => 'Descuento en venta (%)', :hint => 'Ej: 10:2.5 20:4'
  .clear
  = f.input :tag_list, :label => 'Etiquetas', :hint => 'Escriba palabras separadas por comas, Ej.: grande, costoso'
  = f.input :description, :as => :text, :input_html => {:rows => 5}, :label => "Descripción"
  .clear
  
  = f.submit "Salvar"
= javascript_include_tag 'item'

:javascript
  
  $(function() {

    $('select[data-path]').prepend('<option class="new" value="" >Adicionar nuevo</option>');

    var item_discount_div = new DiscountRange('item_discount');
  });
