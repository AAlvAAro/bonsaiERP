:css
  #item-form{max-width: 800px; }

= simple_form_for(@item, :html => {:id => 'item-form'}) do |f|
  = bonsai_form_error(f)
  = hidden_field_tag "scope", params[:scope] if params[:scope].present?

  .row-fluid
    .span6
      = f.input :name, label: 'Nombre'
    .span6
      = f.input :code, label: 'Código'

  .row-fluid
    .span6
      = f.association :unit, :label => "Unidad",
        input_html: { class: 'span10', data: {new_url: new_unit_path, trigger: 'new-unit', title: 'Nueva unidad'} }
      .form-horizontal
        = f.input :active, label: "Activo <i class='icon-info-sign' rel='tooltip' title='Se puede usar en nuevos Ingresos o Egresos'></i>".html_safe
        = f.input :stockable, label: 'Inventario <i title="Se almacena el ítem?" rel="tooltip" class="icon-info-sign"></i>'.html_safe
    .span6.form-horizontal.well.well-small
      %h4 Venta
      = f.input :for_sale, label: 'Se vende'
      = f.input :price, :label => "Precio de venta #{currency_label}".html_safe, input_html: {size: 12, type: 'decimal'}

    .span4

  .row-fluid
    .span6
      = f.input :description, :as => :text, :input_html => {:rows => 4}

  = f.submit "Salvar", :class => 'btn btn-success b'

:javascript
  $(function() {
    $('body').on('new_unit', function(e, resp) {
      var label = resp.name + " (" + resp.symbol + ")";
      $('#item_unit_id').createSelectOption(resp.id, label);
    });

    function showHidePrice() {
      $('#item_price').attr('disabled', !$('#item_for_sale').get(0).checked);
    }

    $('#item_for_sale').on('click', function(e) {
      showHidePrice() 
    });
    showHidePrice();
  });
