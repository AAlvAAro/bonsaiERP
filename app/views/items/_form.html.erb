<%= simple_form_for(@item) do |f| %>
  <%= bonsai_form_error(f) %>

  <div class="inputs half fl">
    <%= f.association :unit, :label => "Unidad" %>
    <%= f.input :name, :label => "Nombre" %>
    <%= f.input :product, :label => "Producto" %>
    <%= f.input :stockable, :hint => "Indica si el producto puede guardarse en stock" %>
  </div>
  <div class="inputs half fl">
    <%= f.input :code, :label => 'Código' %>
    <%= f.input :description, :as => :text, :input_html => {:rows => 5}, :label => "Descripción" %>
  </div>

  <div class="actions" style="clear:both">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>
