%tr.pay_plan{:id => pay_plan.id}
  %td.payment_date= lo pay_plan.payment_date
  %td= lo pay_plan.alert_date
  %td.r.amount #{pay_plan.transaction.currency_symbol} #{ntc pay_plan.amount}
  %td.r #{pay_plan.transaction.currency_symbol} #{ntc pay_plan.interests_penalties}
  %td= pay_plan.description
  %td.state= pay_plan_state pay_plan.state
  - if pay_plan.transaction.income?
    %td{:class => pay_plan.email.to_s}
  %td
    - unless pay_plan.paid?
      = link_to "Editar", edit_pay_plan_path(pay_plan), :class => 'edit ajax', :title => 'Editar crédito'
      = link_to "Borrar", pay_plan, :class => 'delete', :remote => true, :confirm => 'Esta seguro de borrar el crédito?'
