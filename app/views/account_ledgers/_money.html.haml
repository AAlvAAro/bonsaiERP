  %li= link_to "Revisadas", account_path(account, :option => 'con'), :class => tabs_filter('con')


.clear


= link_to "Buscar", "#search", :class => 'search'
/"#", :style => 'display:block;float:left;margin:10px'
/.get_by_option(params[:option]).order("date DESC").page(@page)

= paginate ledgers

%table.decorated.nwl.nwf
  %tr
    %th 
      Fecha<br/>
      %span.tip{:title => 'Nº de cheque, razón, recibo, etc.'} Referencia
    %th Monto en #{account.currency_symbol}
    %th Contacto
    %th Descripción
    %th 
      (R) Revisado por<br/>
      (A) Anulado por
    %th
  - ledgers.each do |al|
    %tr{:class => al.in?.to_s + '_in', :id => "tr#{al.id}" }
      %td.d.check
        = link_to lo(al.date), al, :class => "b #{conciliate_css(al)}"
        %br/
        = al.reference
      %td.cur.col= ntc al.amount
      %td.cont= al.to if al.to_id.present?
      %td.desc= link_description al
      %td.rev
        = "(R) #{al.approver}" if al.approver_id.present?
        = "<br/><span class='dark_grey'>(A) #{al.nuller}</span>".html_safe if al.nuller_id.present?
      %td.cur
        - if al.can_destroy?
          = link_to "borrar", al, :class => 'delete fl', :title => 'Borrar', 'data-confirm' => account_ledger_destroy_confirm_dialog(al)

