- ledgers =  account.get_ledgers(params).order('date desc, id desc').page(@page)

- html = paginate ledgers
= html

%ul.unstyled.listing
  - ledgers.each do |al|
    - al = present al
    %li.row-fluid.account_ledger(id='#{al.id}')
      .span5
        %h4.ib
          = link_to al, al, class: 'code'

        = al.status_tag

        %h5.ib
          = link_to al.account_contact, al.account_contact if al.account_contact
        %p
          = al.operation_tag
          %i= l al.date.to_date
          - unless al.account_id === account.id
            %span.muted De:
            = link_to al.account, al.account
          - unless al.account_to_id === account.id
            %span.muted A:
            = link_to al.account_to, al.account_to
      .span5
        = al.updater_label
        = al.creator_label
        = al.approver_label
        = al.nuller_label
        .clearfix

        .edit-reference
          %a.edit-ledger-reference-link.dark(href='javascript:;' title='Editar referencia' data-toggle='tooltip' data-id='#{ledger.id}' data-reference='#{al.reference}')
            %i.icon-pencil
          %i.icon-file.muted(data-toggle='tooltip' title="referencia")
          %span.reference= nl2br al.reference
      .span2.r
        = ntc al.amount_ref(account.id)
        = currency_label al.currency_ref(account.id)

= html
