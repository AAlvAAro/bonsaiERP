          = al.conciliation_tag
          = link_to al, al
          = al.operation_tag
          = al.account_contact_tag
        .clear-both
        %h5
          %i= l al.date.to_date
          %span.muted De:
          = link_to al.account, al.account
          %span.muted A:
          = link_to al.account_to, al.account_to
