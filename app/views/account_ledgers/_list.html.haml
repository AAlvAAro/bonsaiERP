- ac_path = account.is_a?(Bank) ? "/banks" : "cash_registers"


%ul.tabs
  %li= link_to "Todas", "#{ac_path}/#{account.id}", :class => tabs_filter('all')
  %li= link_to "Esperando conciliación #{size_or_blank(account.account_ledgers.pendent.size)}", "#{ac_path}/#{account.id}?option=false", :class => tabs_filter('false')
  %li= link_to "Conciliadas", "#{ac_path}/#{account.id}?option=true", :class => tabs_filter('true')


.clear


= link_to "Buscar", "#search", :class => 'search'
/"#", :style => 'display:block;float:left;margin:10px'
- ledgers = account.account_ledgers.get_by_option(params[:option]).order("date DESC").page(@page)

= paginate ledgers

%table.decorated.nwl.nwf
  %tr
    %th Fecha
    %th= ref_title
    %th Monto en #{account.currency_symbol}
    %th Contacto
    %th Descripción
    %th Conciliador
    %th
  - ledgers.each do |al|
    %tr{:class => al.income.to_s + '_in' }
      %td.d= link_to lo(al.date), al, :class => "b #{conciliate_css(al)}"
      %td.check= al.reference
      %td.r.col= ntc al.amount
      %td= al.contact if al.contact_id
      %td= link_description al
      %td= al.approver if al.approver_id.present?
      %td.cur
        - unless al.conciliation?
          = link_to "borrar", al, :class => 'delete fl', 'data-remote' => true, :title => 'Borrar', 'data-confirm' => account_ledger_destroy_confirm_dialog(al)

