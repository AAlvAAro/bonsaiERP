%li.row-fluid
  .span4
    %h4.ib
      = link_to ledger, ledger

    = ledger.status_tag

    %i= l ledger.date.to_date
    %p
      = ledger.operation_tag
      %span.muted Cuenta:
      = link_to ledger.trans_account_tag, ledger.trans_account


  .span7
    .span6
      %a.edit-ledger-reference-link.dark(href='javascript:;' title='Editar referencia' data-toggle='tooltip')
        %i.icon-pencil
      %i.icon-file.muted(data-toggle='tooltip' title="referencia")
      = nl2br ledger.reference

    .span6.r
      - if ledger.trans_currency?
        = ntc ledger.trans_amount
        = currency_label ledger.trans_currency
      - else
        = ntc ledger.amount
        = currency_label ledger.currency

        %i.icon-exchange(title="Tipo de cambio: #{ntc ledger.exchange_rate, precision: 4}" data-toggle='tooltip')
        = ntc ledger.amount_currency
        = currency_label ledger.account_currency


  .span1
    = ledger.updater_label
    = ledger.creator_label
    = ledger.approver_label
    = ledger.nuller_label
