:css
  #bank-form { max-width: 700px; }

= simple_form_for(bank, :html => {id: 'bank-form' }) do |f|
  = bonsai_form_error(f)
  .row-fluid
    .span6
      = f.input :name, :label => 'Banco'
    .span6
      = f.input :number, :label => 'Número de cuenta'

  .row-fluid
    -if bank.new_record?
      .span3
        = f.association :currency, :label => 'Moneda',
          :wrapper_html => {title:"<span class='icon-warning-sign icon-white'></span> No es posible modificar después".html_safe},
          :input_html => {class: "over-field"}
      .span3 &nbsp;
      .span3
        = f.input :amount, :label => 'Total en cuenta', :input_html => {:size => 12, :class => 'r'}, :required => true,
          :wrapper_html => {title:"<span class='icon-warning-sign icon-white'></span> No es posible modificar después".html_safe},
          :input_html => {class: "over-field"}
    -else
      .span6
        %label Moneda
        = bank.currency
      .span6
        %label Total en cuenta
        = "#{bank.currency_symbol} #{ntc(bank.account_amount)}"

  .row-fluid
    .span6
      = f.input :address, :label => 'Dirección', :as => :text, :input_html => {:rows => 4, :cols => 35}, :required => false
    .span6
      = f.input :phone, :label => 'Teléfono', :required => false, :wrapper_html => {:class => "_100"}
      = f.input :website, :label => 'Sitio web', :wrapper_html => {:class => "_100"}
  .clear
  = f.submit 'Salvar', :class => 'btn btn-success b'
