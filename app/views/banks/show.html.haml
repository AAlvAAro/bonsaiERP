-content_for :links do
  %ul.breadcrumbs.span6
    %li #{link_to "Cuentas banco", banks_path}
    %li
      %i.icon-caret-right
    %li
      %span #{@bank}


.row-fluid
  .span8
    %h1.n
      %span
        = @bank.name 
        = @bank.number
      = @bank.currency
  .span4.r
    = link_to new_transference_path(account_id: @bank.id), class: 'btn',
      title: 'Transferir dinero a otra cuenta', 'data-toggle' => 'tooltip' do
      %i.icon-exchange
      Nueva transferencia

    = link_to icon_edit_text, edit_bank_path(@bank), class: 'btn'

.row-fluid
  .span6
    .moneybox
      %label SALDO EN BANCO
      %h3
        = ntc @bank.amount
        = currency_label @bank.currency

  .span6
    %label DirecciÃ³n
    = nl2br(@bank.address)


- if params[:pendent].present?
  - ledgers = @bank.pendent_ledgers

  %h3.text-error Transacciones pendientes
  = link_to "Ver todas", @bank
- else

  %h3 Transacciones

  - ledgers = @bank.ledgers

- if @bank.pendent_ledgers.any?
  %h5.n
    =link_to bank_path(@bank.id, pendent: true) , class: 'text-error' do
      %i.icon-warning-sign
      Tiene transaccines pendientes

%ul.unstyled.listing
  = render partial: 'account_ledgers/ledger', collection: ledgers.page(@page), locals: {account: @bank}

