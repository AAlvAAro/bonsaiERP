-content_for :links do
  %ul.breadcrumbs.span6
    %li #{link_to "Cuentas banco", banks_path}
    %li
      %i.icon-caret-right
    %li
      %span #{@bank}


.row-fluid
  .span10
    %h1.n
      %span
        = @bank.name 
        = @bank.number
      = @bank.currency
  .span2.r
    = link_to icon_edit_text, edit_bank_path(@bank), class: 'btn'

.row-fluid
  .span6
    .moneybox
      %label SALDO EN BANCO
      %h3
        = ntc @bank.amount
        = currency_label @bank.currency

  .span6
    %label Direcci√≥n
    = nl2br(@bank.address)

%h3 Transacciones

= render "account_ledgers/money", account: @bank
