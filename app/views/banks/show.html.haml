:css
  #bank_info{
    display: none;
  }

%ul.breadcrumps
  %li #{link_to "Bancos", banks_path}<span>&gt;</span>
.links
  = link_to 'Nuevo', new_bank_path, :class => 'add'
  = link_to 'Editar', edit_bank_path(@bank), :class => 'edit'
.clear

%h1.mb5= @bank.name
%h2.mt5.dark_grey= "#{@bank.number} (en #{@bank.currency.name.pluralize})"
%hr/

.main.fs13._50.fl
  %span.dark_grey Saldo en cuenta:<br/>
  %span.b #{@bank.currency_symbol} #{ntc @bank.total_amount}
._40.fr
  <a id="show_bank_info" href="javascript:">Ver información</a>
  #bank_info
    .input
      %label Dirección
      %span= nl2br(@bank.address)
    .input
      .input._100
        %label Teléfono
        %span= @bank.phone
      .input._100
        %label Email
        %span= @bank.email
      .input._100
        %label Sitio web
        %span= @bank.website
  .clear
.clear

%h2.dark Transacciones
= render "account_ledgers/list", :account_ledgers => @bank.account_ledgers.includes(:payment)

:javascript
  $('#show_bank_info').click(function() {
    if($(this).html() == "Ver información") {
      $('#bank_info').show("slow")
      $(this).html("Ocultar información");
    }else{
      $('#bank_info').hide("slow")
      $(this).html("Ver información");
    }
  });
