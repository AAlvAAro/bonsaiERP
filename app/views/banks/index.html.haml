- content_for :links do
  %ul.breadcrumbs.span6
    %li Cuentas bancarias

.row-fluid
  .span6
    %h2 Cuentas bancarias
  .span6.r
    = link_to new_bank_path, class: 'btn' do
      %i.icon-plus-sign
      Nuevo cuenta bancaria

%ul#banks.accounts_list
  - @banks.each do |bank|
    %li.row-fluid
      .span7
        %h4.n= link_to bank, bank
        - if bank.pendent_ledgers.any?
          =link_to bank_path(bank.id, pendent: true) , class: 'text-error' do
            %i.icon-warning-sign
            Tiene transaccines pendientes
      .span3
        .moneybox
          %label TOTAL EN CUENTA
          %h5.n
            = ntc bank.amount
            = currency_label bank.currency
