- content_for :links do
  .links= link_to "Nueva cuenta bancaria", new_bank_path, :class => 'new'

:css
  #banks{ padding: 0px; margin: 0px; }
  #banks li{ 
    list-style: none; 
    padding: 4px;
    margin-bottom: 10px;
    border-top: 1px solid #BFBFEF;
    border-bottom: 1px solid #CFEFEF;
  }
  #banks li h3{ margin: 2px 4px; }
  #banks li p{padding: 2px 5px; }

%h1 Cuentas bancarias

%ul#banks
  - @banks.each do |bank|
    - account = bank.account
    %li
      ._30.fl
        %h3= link_to account, account
        %h4.mt5.dark= "#{bank.number} (en #{bank.currency.name.pluralize})"
      ._70.fl
        .moneybox.fl
          %label Total en cuenta
          %h3= with_currency bank.account, :amount

        - if bank.account.account_ledgers.pendent?
          .moneybox.fl
            %label Saldo a conciliar
            %h3= "#{bank.account.currency_symbol} #{ntc bank.account.amount_to_conciliate}"
          
          %p.b.fl= link_to "#{bank.account.account_ledgers.pendent.count} pendiente de revisi√≥n", "/accounts/#{bank.id}?option=false"

      .clear

