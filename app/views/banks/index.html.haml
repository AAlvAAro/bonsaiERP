- content_for :links do
  %ul.breadcrumbs.span6
    %li Cuentas bancarias

.row-fluid
  .span6
    %h1 Cuentas bancarias
  .span6.r
    = link_to new_bank_path, class: 'btn' do
      %i.icon-plus-sign
      Nuevo cuenta bancaria

%ul#banks.accounts_list
  - @banks.each do |bank|
    %li.row-fluid
      .span7
        %h3= link_to bank, bank
      .span3
        .moneybox
          %label TOTAL EN CUENTA
          %h3
            = ntc bank.amount
            = currency_label bank.currency

        -#= pendent_money_link(bank, :class => 'fs110')
