- content_for :links do
  .span6 &nbsp;
  .links.span6= link_to "Nuevo cuenta bancaria", new_bank_path

%header
  %h1 Cuentas bancarias

- if @banks.empty?
  %h3 No tiene cuentas bancarias le recomendamos crear una
  = link_to new_bank_path, class: 'btn btn-primary' do
    %i.icon-plus-sign
    Crear cuenta bancaria

%ul#banks.accounts_list
  - @banks.each do |bank|
    %li.row-fluid
      .span7
        %h3= link_to bank, bank
        = currency_label bank.currency
      .span3
        .moneybox
          %label TOTAL EN CUENTA
          %h3
            = ntc bank.amount
            = currency_label bank.currency

        -#= pendent_money_link(bank, :class => 'fs110')
