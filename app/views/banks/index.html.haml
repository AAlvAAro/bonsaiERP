- content_for :links do
  .span6 &nbsp;
  .links.span6= link_to "Nueva cuenta bancaria", new_bank_path, :class => 'new'

.page-header
  %h1 Cuentas bancarias

- if @banks.empty?
  %h3 No tiene cuentas bancarias le recomendamos crear una
  = link_to new_bank_path, class: 'btn b' do
    %i.bicon-add
    Crear cuenta bancaria

%ul#banks.accounts_list
  - @banks.each do |bank|
    %li.row-fluid
      .span7
        %h3= link_to bank, bank
        %h4.mt5.dark= bank.currency.name.pluralize
      .span5
        .moneybox.fl
          %label TOTAL EN CUENTA
          %h3= with_currency bank.account, :amount

        = pendent_money_link(bank, :class => 'fs110')

      .clear

