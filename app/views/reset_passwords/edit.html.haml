:css
  #links{ display: none; }
  input{
    font-size: 1.5em;
    padding: 2px 6px;
  }
  label{
    font-size: 1.2em; 
    display: block; 
    font-weight: bold; 
    color: #383838;
  }
  p.accept{ color: #383838; }
  .input{
    width: 100%;
    padding: 5px 0px;
  }

%h1 Cambio de contraseña
= simple_form_for @user, :url => reset_password_path(@user) do |f|
  = f.input :reset_password_token, :as => :hidden
  = f.input :password, :label => 'Contraseña', :wrapper_html => {:class => '_90'}
  = f.input :password_confirmation, :label => 'Confirmación de contraseña', :wrapper_html => {:class => '_90'}
  .clear
  = f.submit "Cambiar contraseña"


