- present @client, ContactPresenter do |presenter|
  - content_for :links do
    %ul.breadcrumps.span6
      %li #{link_to "Clientes", clients_path} 
    .links.span6
      = link_to "VÃ­deo", "http://www.youtube.com/embed/BZMsfhXi9uw", :class => 'video', 'data-title' => 'Como crear clientes'
      = link_to 'Nuevo', new_client_path, :class => 'new'
      = link_to 'Editar', edit_client_path(@client), :class => 'edit'
      = link_to 'Borrar', @client, :class => 'delete'

  .page-header
    %h1
      = @client.matchcode
      %small.pill.bg-dark.white Cliente

  -if current_user.is_admin?
    = link_to new_account_balance_path(:contact_id => @client.id), :class => "btn btn-success" do
      %i.icon-adjust.icon-white
      Balancear cuenta

  .span6.offset6
    = render 'contacts/show', :klass => @client

  .clear
  - @client.accounts.each do |ac|
    = presenter.moneybox ac

  - presenter.incomes.each do |cur, amt|
    .moneybox.fl 
      %label.dark-green SALDO VENTAS
      %h3 
        =cur
        =ntc amt

  - presenter.buys.each do |cur, amt|
    .moneybox.fl 
      %label.red SALDO COMPRAS #{cur}
      %h3= ntc amt

  .clear

  = jquery_tabs :tab_id => "contact_tab" do
    =jqueryui_ul do
      =tab "Transacciones", client_path(@client, :tab => 'transactions'), "transactions"
      =tab "Ventas", client_path(@client, :tab => 'incomes'),"incomes"
      =tab "Compras y gastos", client_path(@client, :tab => 'buys'), "buys"
      =tab "Operaciones inventarios", client_path(@client, :tab => 'inventory'), "inventory"
      
    -# "contacts/account_ledgers", "contacts/inconmes", "contacts/buys", "contacts/inventory_operations"
    = tab_panel do
      = render @partial, @locals

  :javascript
    $(function() {
    });
