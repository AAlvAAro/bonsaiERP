<style>
  label{width: 15em;}
</style>
<% simple_form_for @user do |f| -%>
  <%= f.input :first_name, :label => I18n.t("user.attributes.first_name") %>
  <%= f.input :last_name, :label => I18n.t("user.attributes.last_name") %>
  <%= f.input :email, :label => I18n.t("user.attributes.email") %>
  <%= f.input :phone, :label => I18n.t("user.attributes.phone"), :required => false %>
  <%= f.input :mobile, :label => I18n.t("user.attributes.mobile"), :required => false %>
  <%= f.input :website, :label => I18n.t("user.attributes.website"), :required => false %>
  <%= f.input :password, :label => I18n.t("user.attributes.password") %>
  <%= f.input :password_confirmation, :label => I18n.t("user.attributes.password_confirmation") %>
  <%= f.input :description, :label => I18n.t("user.attributes.description"), :required => false, :input_html => {:cols => 40, :rows => 5} %>

  <%= f.button :submit %>
<% end -%>
