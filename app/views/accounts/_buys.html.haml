- url = account_path(account)
%ul.tabs
  %li= link_option "Todas", url, 'all'
  %li= link_option "Esperando aprobación #{size_or_blank(buys.draft.size)}", url, 'draft'
  %li= link_option "Esperando pago #{size_or_blank(buys.approved.size)}", url,'awaiting_payment'
  %li= link_option "Vencidas #{size_or_blank(buys.due.size)}", url, 'due'
  %li= link_option "Pagadas", url, 'paid'

#search_income.search{:style => show_if_search}
  %a.close{:href => "#"} cerrar
  %h3 Buscar ventas
  =form_tag "/buys", :method => 'get' do
    =hidden_field_tag "search_div_id", "search_buys"
    .input
      %label Cliente o Nº de referencia
      =text_field_tag 'search', params[:search], :size => 40
    .input
      %label Estado
      =select_tag "option", options_for_select(list_income_states, params[:option])
    %div
    =submit_tag 'Buscar, :class => 'btn btn-success'

= link_to "Buscar", "#search_income", :class => 'search'

= paginate buys.page(@page)

%table{ :class => 'decorated nwl' }
  %thead
    %tr
      %th.tip{:title => 'Estado'} Est.
      %th.tip{ :title => 'Número de referencia' } Nº Ref.
      /%th Cliente
      %th Vence el
      %th Total<br/>#{currency_symbol}
      %th Saldo<br/>#{currency_symbol}
      %th.tip{:title => 'Saldo Inventario'} Saldo<br/>Inv. #{currency_symbol}
      %th.tip{:title => 'Moneda'} Mon.
      %th.tip{:title => "Contado Crédito"} Tipo
      %th Fecha Hora
      %th

  %tbody
    - buys.page(@page).each do |buy|
      %tr{ :class => cycle(:odd, :even) }
        %td 
          %span{:class => "#{buy.real_state} tip", :title => buy.show_state}
        %td= link_to buy.ref_number, buy, :class => 'b'
        /%td= buy.account
        %td= lo buy.payment_date unless buy.paid?
        %td.cur= ntc exchange(buy, :real_total, currency_rates)
        %td.cur= ntc exchange(buy, :balance, currency_rates)
        %td.cur= ntc buy.balance_inventory
        %td <span>#{buy.currency_symbol}</span>
        %td= cash_credit(buy.cash)
        %td.nw= lo buy.created_at
        %td.actions
          = bonsai_links(buy) if buy.draft?


