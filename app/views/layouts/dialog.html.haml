%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en" }
  %head
    %meta{ 'http-equiv'  => "content-type", :content => "text/html;charset=UTF-8" }
    %title BonsaiERP
    %link{:name => "viewport", :content=> "width=device-width,initial-scale=1,user-scalable=no,maximum-scale=1"}
    %link{:rel => "shortcut icon", :href => "/assets/favicon.ico", :type => "image/x-icon"}
    = csrf_meta_tag

    = stylesheet_link_tag "dialog"
    = javascript_include_tag "application"

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-203928-7']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      $(document).ready(function() {
        // TODO: Move to cofeescript
        $('#dialog_wrapper').fadeTo(0,0.0).delay(500).fadeTo(1000, 1); 
      });

  %body
    - if Rails.env == 'development'
      %div{ :id => "debug-error", :style => "display:none; width: 640px; height: 480px; overflow: auto; z-index: 10000; background:#FFF;color:#000" }
        %iframe{ :id => "cont-iframe", :width => "100%", :height => "100%"}

    #dialog_wrapper  
      = render "layouts/flash"
      = yield

      %p.legal
        ©2011 Todos los derechos reservados.
        %a{:href=>'#!/legal'}
          Más información
