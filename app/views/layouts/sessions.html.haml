!!!XML
!!!
%html{xmlns: "http://www.w3.org/1999/xhtml", 'xml:lang' => "es", lang: "es" }
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link(name="viewport" content="width=device-width,initial-scale=1,user-scalable=no,maximum-scale=1")
    %link(rel= "shortcut icon" href="/favicon.ico" type="image/x-icon")
    = csrf_meta_tag

    %title Bonsai
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"

    :javascript
      this.exchangeRates = #{set_exchange_rates};
      this.currencies = #{File.read Rails.root.join 'public', 'currencies.json' };

  %body
    .session-header
      = link_to "http://#{DOMAIN}" do
        = image_tag 'logo-tree.png'

    #wrapper.cont

      .browser-list.center
        %h4#message.n Por favor actualize su navegador para poder usar bonsaiERP, haga click en los Ã­conos

        %a.browser.chrome(href='https://www.google.com/intl/es/chrome/browser/' target='_blank' title='Google chrome' data-toggle='tooltip')
        %a.browser.firefox(href='http://www.mozilla.org/es-ES/firefox/new/' target='_blank' title='Firefox' data-toggle='tooltip')

      .container-fluid
        = render "layouts/flash", flash: flash

        = render "users/change_default_password" if current_user && current_user.change_default_password?

        = yield
        .clear

    = render 'layouts/footer'
