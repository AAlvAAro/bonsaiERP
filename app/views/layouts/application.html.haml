!!!XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en" }
  %head
    %meta{ 'http-equiv'  => "content-type", :content => "text/html;charset=UTF-8" }
    = csrf_meta_tag

    %title Bonsai
    = stylesheet_link_tag 'style', 'jquery-ui-1.8.10.custom.css' 
    = javascript_include_tag 'jquery-1.5.min', 'jquery-ui-1.8.8.custom.min.js', 'jquery.ui.datepicker-es.js', 'tooltip.min', 'jquery.tmpl.min', :cache => 'javascripts'
    = javascript_include_tag 'application'
    /, 'rails'

    - if Rails.env == 'test'
      :javascript
        $.ajaxSetup({ async: false });

  %body

    - if Rails.env == 'development'
      %div{ :id => "debug-error", :style => "display:none; width: 640px; height: 480px; overflow: auto; z-index: 10000; background:#FFF;color:#000" }
        %iframe{ :id => "cont-iframe", :width => "100%", :height => "100%"}

    #main_wrap
      #wrapper
        #wrap_in
          #logo
          #header
            = render 'layouts/usersettings_menu' if user_signed_in?
            - if organisation?
              %h1= session[:organisation][:name]
          #menu
            = render 'layouts/main_menu'

          #cont
            #links= yield :links
            #cont-in
              = render "layouts/flash"
              = yield
            .clear
          #foot

