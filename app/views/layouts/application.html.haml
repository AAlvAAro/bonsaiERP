!!!XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en" }
  %head
    %meta{ 'http-equiv'  => "content-type", :content => "text/html;charset=UTF-8" }
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link{:name => "viewport", :content=> "width=device-width,initial-scale=1,user-scalable=no,maximum-scale=1"}
    %link{:rel => "shortcut icon", :href => "/assets/favicon.ico", :type => "image/x-icon"}
    = csrf_meta_tag

    %title Bonsai
    :javascript
      var exchangeRates = #{set_exchange_rates}
      window.exchangeRates = exchangeRates;

    = javascript_include_tag "application"

    = stylesheet_link_tag "application"
    - if organisation?
      :javascript
        var organisation = { 
          currency_id: #{current_organisation.currency_id},
          currency_code: "#{currency_code}",
          //due_date: new Date(""),
          name: "#{current_organisation.name}"
        }
        window.organisation = organisation;

  %body

    - if Rails.env == 'development'
      %div{ :id => "debug-error", :style => "display:none; width: 640px; height: 480px; overflow: auto; z-index: 10000; background:#FFF;color:#000" }
        %iframe{ :id => "cont-iframe", :width => "100%", :height => "100%"}

    #header.navbar
      .navbar-inner
        .container-fluid
          -#%a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .row
            .span7
              .nav-collapse.in(style="height: auto;")
                = render 'layouts/main_menu'
              -# if organisation?
                %h1{:title => "ID: #{session[:organisation][:id]}, Exp:  #{lo session[:organisation][:due_date] }"}= session[:organisation][:name]
            .span5.pull-right
              = render 'layouts/usersettings_menu' if user_signed_in?


    #wrapper
      #menu
        .container-fluid
          .main-links.row-fluid= yield :links

      #cont
        .container-fluid
          = render "layouts/flash", flash: flash
          = yield
          .clear
      #footer
        .container
          %p
            ©2011-2012 &middot; 
            =link_to "BonsaiERP", "http://bonsaierp.com"
            El software para la gestión de empresas
            %br
            %a(href="http://twitter.com/#!/bonsaierp" target="_blank") Twitter
            &middot;
            %a(href="http://www.facebook.com/pages/BonsaiERP/337187402983197" target="_blank") Facebook
          -#%p
            %a Blog
            &middot;
            %a Cambios Recientes
            &middot;
            %a Estado del Servicio
            &middot;
            %a Terminos del Servicio
            &middot;
            %a Políticas de Privacidad

    #modal-template(style="display:none")
      .modal
        .modal-header
          %h4
          %a.close(data-dismiss="modal")
        .modal-body
        .modal-footer
