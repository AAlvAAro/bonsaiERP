:css
  #links{display: none; }
%h1 Configuración

#tabs
  %ul
    %li <a href="#users">Usuarios</a>
    %li <a href="#organisation">Empresa</a>
      

  #users
    %p=link_to "Adicionar usuario", "/users/add_user", :class => 'new'

    %table.decorated
      %tr
        %th Nombre Completo
        %th Email
        %th Rol
        %th Activo
        %th
      - @users.each do |user|
        %tr
          %td= link_to user, user
          %td= user.email
          %td= User.roles_hash[user.rol]
          %td{:class => user.active }
          %td
            = link_to "editar", edit_user_user_path(user), :class => 'edit', :title => 'Editar usuario'

  #organisation
    = link_to "Editar datos empresa", "/organisations/#{session[:organisation][:id]}/edit", :class => 'edit link'

    - @org = Organisation.find(OrganisationSession.organisation_id)
    
    %h3 Datos #{@org}

    .input
      %span.dark-grey Teléfono:
      = @org.phone
      %span.dark-grey Movil:
      = @org.mobile
      %br
      %span.dark-grey Email:
      = @org.email
      %br
      %span.dark-grey Sitio web:
      = @org.website

    .input= nl2br(@org.address)

    .clear


:javascript
  $(function() { 
    $('#tabs').tabs(); 
  });
