%h1 <%= plural_table_name %>

%p.links= link_to "Nuevo <%= singular_name %>", new_<%= singular_name %>_path, :class => 'new'

%table.decorated.nwl 
  %thead
    %tr
<% for attribute in attributes -%>
      %th <%= attribute.name.humanize %>
<% end -%>
      %th
  
  %tbody
    - for <%= singular_name %> in @<%= plural_name %>
      %tr{ :class => cycle(:odd, :even) }
<% for attribute in attributes -%>
        %td= <%= singular_name %>.<%= attribute.name %>
<% end -%>
        %td.actions= bonsai_links(<%= singular_name %>)
